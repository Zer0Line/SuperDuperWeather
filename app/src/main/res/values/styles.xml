<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AllText" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/slavfonts</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/Sizetext</item>
    </style>

    <style name="BigText" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/slavfonts</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/SizeHeadertext</item>
    </style>
</resources>
